@model Naspinski.FoodTruck.Data.Distribution.Models.Menu.PriceTypeModel

<h2>
    <span id="new-edit">@(Model.IsNew ? "New" : "Edit") </span>
    Category
    <a class="btn btn-default pull-right" asp-area="" asp-controller="PriceType" asp-action="Index">
        <i class="glyphicon glyphicon-list"></i>
        Price Types
    </a>
</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form-edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SortOrder"></label>
                <input asp-for="SortOrder" type="number" class="form-control" />
                <span asp-validation-for="SortOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="glyphicon glyphicon-floppy"></i>
                Save
            </button>
        </form>
    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $('#form-edit').on('submit', function (e) {
                if ($('#form-edit').valid()) {
                    e.preventDefault();
                    $.ajax('/PriceType/Edit', {
                        type: 'POST',
                        data: $('#form-edit').serialize(),
                        success: function (data) {
                            $.toast({ text: 'Saved', icon: 'success' })
                            $('#new-edit').html("Edit");
                            $('#Id').val(data.id);
                        },
                        error: function (data) {
                            $.toast({ text: 'Unknown error occurred', hideAfter: false, icon: 'error' })
                        }
                    })
                }
            });
        });
    </script>
}